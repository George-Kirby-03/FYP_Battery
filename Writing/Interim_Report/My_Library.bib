	author = {Usman Tahir, Muhammad and Sangwongwanich, Ariya and Stroe, Daniel-Ioan and Blaabjerg, Frede},
	month = sep,
	year = {2023},
	keywords = {Electric vehicles (EVs), Fast charging strategies, Li-ion batteries (LIBs), Multi-stage constant current (MSCC) charging},
	pages = {228--241},
	file = {ScienceDirect Full Text PDF:/Users/georgekirby/Zotero/storage/EYKL96ZM/Usman Tahir et al. - 2023 - Overview of multi-stage charging strategies for Li-ion batteries.pdf:application/pdf;ScienceDirect Snapshot:/Users/georgekirby/Zotero/storage/TIADNP5E/S2095495623003091.html:text/html},
}

