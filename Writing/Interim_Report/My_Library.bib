	journal = {Chemical Engineering Journal},
	author = {Li, Yaqi and Guo, Wendi and Stroe, Daniel-Ioan and Zhao, Hongbo and Kjær Kristensen, Peter and Rosgaard Jensen, Lars and Pedersen, Kjeld and Gurevich, Leonid},
	month = oct,
