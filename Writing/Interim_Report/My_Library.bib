	author = {Schmitt, Julius and Rehm, Mathias and Karger, Alexander and Jossen, Andreas},
	month = mar,
	year = {2023},
	keywords = {Lithium-ion battery, Capacity estimation, Degradation modes, OCV curve, Partial charging, State of health estimation},
	pages = {106517},
	file = {ScienceDirect Full Text PDF:/Users/georgekirby/Zotero/storage/RLW8R9CR/Schmitt et al. - 2023 - Capacity and degradation mode estimation for lithium-ion batteries based on partial charging curves.pdf:application/pdf;ScienceDirect Snapshot:/Users/georgekirby/Zotero/storage/LMIVKNSR/S2352152X22025063.html:text/html},
